---
import GlobalNav from '../components/GlobalNav.svelte';
import GlobalFooter from '../components/GlobalFooter.astro';

const {title, desc} = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{title}</title>

        <meta name="description" content={desc}>

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">

        <link rel="stylesheet" href={Astro.resolve('../styles/global.css')}>
        <link rel="stylesheet" href="https://cdn.snipcart.com/themes/v3.3.0/default/snipcart.css" />

        <link rel="preconnect" href="https://app.snipcart.com" />
        <link rel="preconnect" href="https://cdn.snipcart.com" />

    </head>
    <body class="bg-replicant-900">
        <GlobalNav client:load="svelte"/>
        <slot />
        <GlobalFooter />
        <script async src="https://cdn.snipcart.com/themes/v3.3.0/default/snipcart.js"></script>
        <div id="snipcart" data-config-modal-style="side" data-api-key={import.meta.env.PUBLIC_SNIPCART_API} hidden></div>
    </body>
</html>
