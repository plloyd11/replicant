---
const { reviews } = Astro.props;
import { Image } from 'astro:assets';
import IM from '../../assets/im.png';
---

<section id="intro" class="relative bg-replicant-900">
    <div class="lg:relative lg:flex lg:items-center lg:h-screen">
        <div class="w-full pt-16 pb-20 mx-auto text-center max-w-7xl lg:text-left">
            <div class="px-4 lg:w-1/2 sm:px-8 xl:pr-16">
                <h1
                    class="text-4xl font-bold tracking-wide uppercase text-replicant-100 sm:text-5xl md:text-6xl lg:text-5xl xl:text-7xl"
                >
                    Infinite Mortality
                </h1>
                <div>
                    <p
                        class="max-w-md mx-auto mt-3 text-lg text-replicant-300 sm:text-2xl md:mt-5 md:max-w-xl"
                    >
                        New album out now on Transcending Obscurity Records.
                    </p>
                </div>
                <div class="mt-8 sm:flex sm:justify-center lg:justify-start">
                    <div class="rounded-md shadow">
                        <a
                            href="#shop"
                            class="flex items-center justify-center w-full px-8 py-3 text-base font-medium border border-transparent rounded-md text-replicant-100 bg-primaryColor hover:bg-primaryColorDark md:py-4 md:text-lg md:px-10"
                        >
                            Grab some merch
                        </a>
                    </div>
                    <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
                        <a
                            href="https://replicantband.bandcamp.com/album/infinite-mortality"
                            target="_blank"
                            rel="noopener"
                            class="flex items-center justify-center w-full px-8 py-3 text-base font-medium bg-transparent border rounded-md border-primaryColor text-primaryColor hover:bg-primaryColorDark hover:text-replicant-100 md:py-4 md:text-lg md:px-10"
                        >
                            Buy the digital album
                        </a>
                    </div>
                </div>
                <div
                    class="max-w-md mx-auto mt-4 italic text-replicant-300 sm:text-xl md:mt-16 md:max-w-xl"
                >
                    <span>"{reviews.pullQuote}" -</span>

                    <a
                        href={reviews.linkToReview}
                        target="_blank"
                        rel="noopener"
                        class="underline decoration-primaryColor underline-offset-1"
                    >
                        {reviews.source}
                    </a>
                </div>
            </div>
        </div>
        <div
            class="relative h-[31rem] md:h-96 lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2 lg:h-full"
        >
            <Image
                src={IM}
                alt="Infinite Mortality album cover"
                class="absolute inset-0 object-cover w-full h-full"
            />
        </div>
    </div>
</section>
